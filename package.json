{
  "name": "detectorjs",
  "version": "0.0.1",
  "packageManager": "pnpm@8.10.5",
  "description": "A simple and zero-dependency browser and node env detector.",
  "type": "module",
  "keywords": [
    "browser detector",
    "browser type",
    "node type",
    "env",
    "env detector"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemengke1997/detectorjs.git"
  },
  "author": "hemengke <https://github.com/hemengke1997>",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "simple-git-hooks && tsup --watch",
    "build": "tsup",
    "build:pages": "pnpm run build && cd playground/spa && pnpm run build",
    "test:dev": "vitest",
    "test": "run-s test:unit",
    "test:unit": "vitest run",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "up": "taze -I -w -r",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "bump": "bumpp package.json -c -p -t --all -x \"pnpm run changelog\""
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@minko-fe/commitlint-config": "^2.0.5",
    "@minko-fe/eslint-config": "^2.0.5",
    "@minko-fe/lodash-pro": "^0.1.13",
    "@minko-fe/tsconfig": "^2.0.5",
    "@types/node": "^20.9.0",
    "bumpp": "^9.2.0",
    "conventional-changelog-cli": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "8.53.0",
    "happy-dom": "^12.10.3",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.11.4",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6",
    "vitest-e2e": "^0.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec commitlint -e",
    "pre-commit": "pnpm run lint"
  }
}
